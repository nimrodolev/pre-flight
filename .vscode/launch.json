    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Probot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\node_modules\\probot\\bin\\probot-run.js",
            "args": ["./lib/index.js"],
            "preLaunchTask": "Build",
            "console": "integratedTerminal",
            "outFiles": [],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "env": {}
        }
    ]
}